@{
    ViewData["Title"] = "Home Page";
}

@if (User?.Identity != null && User.Identity.IsAuthenticated)
{
    <h3>Hello, @ViewBag.FullName!</h3>
    <p>Gender @ViewBag.Gender</p>
    <p>PhoneNumber @ViewBag.phoneNumber</p>
    <p>Email @ViewBag.Email</p>
}
else
{
    <span>Hello, Guest</span>
}


<h2>เลือกหมวดหมู่</h2>
<div>
    <a href="/Home">ทั้งหมด</a>
    @foreach (var category in @ViewBag.Categories){
        <a href="/Home/Post?categorieId=@category.CategoryId">@category.Name</a>
    }
</div>

<hr />

@model List<DemoVolunteer.Models.Post>
<h3>รายการสินค้า</h3>
<ul>
@foreach (var post in Model)
{
    <li>ชื่อ @post.Title - สถานที่ @post.Location - เจ้าของโพส @post.Owner.FullName</li>
    <img src="@post.ImgURL" width="100px">
    <a href="/Post/Detail?postId=@post.PostId">ลายละเอียด</a>
    <hr>
}
</ul>
